<div class="container" id="app">
    <div style="margin:100px 5%;">
        <div class="row">
            <div class="col-md-2">
                Name:
            </div>
            <div class="col-md-10">
                <span style="color:green;">{{order.userName}}</span>
            </div>

        </div>
        <hr>
        <div class="row">
            <div class="col-md-2">

                Tel:</div>
            <div class="col-md-10"> <span style="color:red;">{{order.tel}}</span>
            </div>
        </div>
        <hr>

        <div class="row">
            <div class="col-md-2">

                Email:</div>
            <div class="col-md-10"> <span style="color:green;">{{order.email}}</span>
            </div>
        </div>
        <hr>

        <div class="row">
            <div class="col-md-2">

                Delivery:</div>
            <div class="col-md-10"><span style="color:green;">{{order.delivery}}</span>
            </div>
        </div>
        <hr>

        <div class="row">
            <div class="col-md-2">

                Pay:</div>
            <div class="col-md-10"><span style="color:green;">{{order.paymethod}}</span>
            </div>
        </div>
        <hr>

        <div class="row">
            <div class="col-md-2">


                Date:</div>
            <div class="col-md-10"><span style="color:green;">{{order.date}}</span>
            </div>
        </div>

        {{#if order.post}}

        <hr>
        <div class="row">
            <div class="col-md-2"> Address:
            </div>
            <div class="col-md-10">
                <span style="color:red;">
                    {{order.warhouse.Description}} ,
                    {{order.warhouse.SettlementDescription}},
                    {{order.warhouse.SettlementRegionsDescription}},
                    {{order.warhouse.SettlementAreaDescription}}</span></div>
        </div>
        {{else}}
        <hr>
        <div class="row">
            <div class="col-md-2">

                Address:</div>
            <div class="col-md-10"><span style="color:red;">{{order.city}}</span>
            </div>
        </div>

        {{/if}}
        <hr>
        <div class="row">
            <div class="col-md-2">

                Comment:</div>
            <div class="col-md-10"><span style="color:green;">{{order.comment}}</span>
            </div>
        </div>
        <hr>
        <div class="row">
            <div class="col-md-2">

                Sum:</div>
            <div class="col-md-10"><span style="color:red;">{{order.sum}} ₴</span>
            </div>
        </div>
        <hr>
        <div class="row" style="margin:20px 0; border:1px solid grey; border-radius:10px;">
            {{#each order.productInOrder}}
            <div class=" col-6 col-sm-6 col-md-4 card-wrapper" style="padding:0px;">
                <div class="category ply-card" style="margin:10px;">
                    <a href="/product/{{this.id}}">
                        <div class="card">
                            <img class="card-img-top " src="{{this.mainImage}}">
                            <div class="card-body">
                                <h5 class="card-title" style="margin-top:0px;">{{this.title}}</h5>
                                <h5 class="card-title" style="margin-top:0px;">Матеріал:{{this.material}}</h5>
                                <h5 class="card-title" style="margin-top:0px;">Обробка:{{this.postprocessing}}
                                    {{this.color}}</h5>
                                <h5 class="card-title" style="margin-top:0px;">{{this.price}} ₴</h5>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
            {{/each}}
        </div>
    </div>

</div>
<script src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js"></script>
<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
