<div class="container" style="margin-top: 100px;">
    <div id="products">
        <div class="d-flex align-items-center justify-content-between">
            <h3 class="category-name">{{this.category}}</h3>
            <a href="/#menu-cat">Назад</a>
        </div>
        <hr />
        <div id="products">
            <div class="row">
                {{#each products}}
                <div class="col-md-6 col-lg-3 card-wrapper">
                    <div class="product ply-card">
                        <a href="/product/{{this.id}}">
                            <div class="card">
                                <img class="card-img-top" src="{{this.mainImage}}">
                                <div class="card-body">
                                    <div class="container-fluid">
                                        <div class="row">
                                            <h5>{{this.title}}
                                            </h5>
                                        </div>
                                        <div class="row">
                                            <h6>{{this.price}}₴</h6>
                                            <button id="{{this.id}}" class="btn btn-primary btn-sm btn-buy"
                                                onclick="buy(event)" style="position: absolute; right:10px;"> В корзину
                                            </button>
                                        </div>
                                    </div>




                                </div>
                            </div>
                        </a>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>